<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".toast_example">


    <ImageView
        android:id="@+id/imgtoast"
        android:layout_width="184dp"
        android:layout_height="281dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:contentDescription="@string/leaves"
        app:srcCompat="@drawable/leaves" />

    <TextView
        android:id="@+id/texttoast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@id/imgtoast"
        android:text="@string/your_toast_is_here" />

</RelativeLayout>