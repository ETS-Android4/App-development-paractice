<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StaticFragmentExample.MyContactsMainActivity">

    <fragment
        android:id="@+id/contactsfragment"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1"
        class = "com.example.myapplication.StaticFragmentExample.Contacts">

    </fragment>

    <fragment
        android:id="@+id/contactsdetail"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="2"
        class = "com.example.myapplication.StaticFragmentExample.ContactsDetail">

    </fragment>

</LinearLayout>